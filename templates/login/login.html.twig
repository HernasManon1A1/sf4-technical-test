{% extends 'base.html.twig' %}

{% block title %}Connexion {{ parent() }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/login-snippet.css') }}">
{% endblock %}

{% block body %}
    <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <div class="row">
            <div class="iconmelon">
                <svg viewBox="0 0 32 32">
                    <g filter="">
                        <use xlink:href="#git"></use>
                    </g>
                </svg>
            </div>
        </div>
        <div class="panel panel-default" >
            <div class="panel-heading">
                <div class="panel-title text-center">Test Technique Symfony4</div>
            </div>
            <div class="panel-body" >
                {{ form_start(form, {'action': path('login'), 'method': 'POST', 'multipart': true, 'attr': {'class': 'form-horizontal', 'id': 'form'}}) }}
                {% if error %}
                    <div class="alert alert-danger">
                                {{ form_errors(form) }}
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="input-group">
                    <a href="{{ path('register') }}" class="">Nouveau compte</a>
                </div>
                <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'id': 'user', 'placeholder': 'Nom de compte'}}) }}
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'password', 'placeholder': 'Mot de passe'}}) }}
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 controls">
                            <button type="submit" href="#" class="btn btn-primary btn-lg btn-block">Se connecter</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    {{ include('partials/particles.html.twig') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/login-snippet.js') }}"></script>
{% endblock %}
